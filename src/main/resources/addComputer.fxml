<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<View fx:controller="com.mycompany.sample.AppManager.AddComputerController"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@style.css"
      prefHeight="600.0" prefWidth="370.0">

    <top>
        <StackPane prefHeight="50.0" styleClass="footer" BorderPane.alignment="CENTER">
            <Label text="Adicione seu PC" styleClass="title-label" />
        </StackPane>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <Label fx:id="confirmLabel">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>

            <TextField fx:id="namePCTextField" promptText="Nome PC" styleClass="text-field"/>
            <TextField fx:id="macTextField" promptText="MAC" styleClass="text-field"/>
            <TextField fx:id="ipTextField" promptText="IP" styleClass="text-field"/>

            <HBox alignment="CENTER" spacing="15.0">
                <Button text="Adicionar" onAction="#createOrEditComputer" styleClass="control-button"/>
                <Button text="Next" onAction="#goToMainScreen" styleClass="control-button"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <StackPane styleClass="footer" alignment="CENTER"/>
    </bottom>
</View>
