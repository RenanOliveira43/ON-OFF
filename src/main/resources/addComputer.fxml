<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<View prefHeight="600.0" prefWidth="370.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.sample.AppManager.AddComputerController">

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label fx:id="confirmLabel">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>

            <TextField fx:id="namePCTextField" promptText="Nome PC" styleClass="text-field" />
            <TextField fx:id="macTextField" promptText="MAC" styleClass="text-field" />
            <TextField fx:id="ipTextField" promptText="IP" styleClass="text-field" />

            <HBox alignment="CENTER" spacing="15.0">
                <Button onAction="#createOrEditComputer" styleClass="control-button" text="Adicionar" />
                <Button onAction="#goToMainScreen" styleClass="control-button" text="Next" />
            </HBox>
        </VBox>
    </center>
    <bottom>
        <StackPane prefHeight="50.0" styleClass="footer">
         <children>
            <HBox fx:id="avatarContainer" prefHeight="100.0" prefWidth="200.0">
               <padding>
                  <Insets bottom="20.0" />
               </padding></HBox>
         </children></StackPane>
    </bottom>
   <top>
      <StackPane prefHeight="50.0" styleClass="footer" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="avatarContainer1" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label contentDisplay="CENTER" text="Adicione seu PC" />
               </children>
               <StackPane.margin>
                  <Insets top="20.0" />
               </StackPane.margin>
            </HBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </StackPane>
   </top>
</View>
